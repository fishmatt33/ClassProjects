@model IEnumerable<DvdLibrary.UI.Models.MovieProperties>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width"/>
    <title>SearchResults</title>
</head>
<body>
<div>
    <h3>@Html.ActionLink("Back to List", "Index", "Home")</h3>

    @if (Model.Any())
    {
        <h4>Here are your search results</h4>
        <div class="table responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Director</th>
                        <th>Year</th>
                        <th>Rating</th>
                        <th>Runtime</th>
                        <th>Actors</th>
                    </tr>
                    </thead>
                    <tbody>
                        
                    @foreach (var movie in Model)
                    {

                        <tr>
                            <th scope="row"></th>
                            <td>
                                @Html.ActionLink(@movie.Title, "Details", "Home", new { id = @movie.MovieId }, null)
                            </td>
                            <td>@movie.Director</td>
                            <td>@movie.Year</td>
                            <td>@movie.Rating</td>
                            <td>@movie.Runtime</td>
                            <td>@movie.Actor</td>
                        </tr>
                    }
                    </tbody>
                    
                </table>
            </div>
        
        
        @*Initial searching options
        <table border="1">
            <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Actor</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var movies in Model)
            {
                <tr>
                    <td>@movies.Title</td>
                    <td>@movies.Director</td>
                    <td>@movies.Actor</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Home", new {id = @movies.MovieId}, null)
                    </td>
                    <td>
                        <form action="/Home/DeleteMovie" method="POST">
                            <input type="hidden" name="MovieId" id="MovieId" value="@movies.MovieId"/>
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>*@
    }
        
</div>
</body>
</html>
